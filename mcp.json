{
  "name": "unicode-puzzles-mcp",
  "version": "0.1.0",
  "description": "MCP server for quantum steganography puzzles using Unicode",
  "author": "MCP Division",
  "license": "MIT",
  "main": "src/server/index.js",
  "mcp": {
    "serverType": "stdio",
    "runtime": "node",
    "command": "node",
    "args": ["src/server/index.js"]
  },
  "capabilities": {
    "tools": [
      "create_puzzle",
      "decode_puzzle", 
      "list_templates",
      "encode_message",
      "decode_message",
      "search_characters",
      "get_zero_width_chars"
    ]
  }
}